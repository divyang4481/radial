<configuration>
  <configSections>
    <sectionGroup name="enyim.com">
      <section name="memcached" type="Enyim.Caching.Configuration.MemcachedClientSection, Enyim.Caching" />
    </sectionGroup>
  </configSections>

  <enyim.com>
    <memcached>
      <servers>
        <add address="10.2.0.135" port="11211" />
      </servers>
      <socketPool minPoolSize="10" maxPoolSize="100" connectionTimeout="00:00:10" deadTimeout="00:02:00" />
    </memcached>
  </enyim.com>
  
  <system.web>
    <compilation debug="true" targetFramework="4.0" />

    <sessionState mode ="Custom" customProvider="MemcachedSessionpProvider" timeout="1">
      <providers>
        <add name="MemcachedSessionpProvider" type="Radial.Web.Session.MemcachedStateStore, Radial.Web.Session" applicationName="SessionTestSite" />
      </providers>
    </sessionState>
  </system.web>

</configuration>
